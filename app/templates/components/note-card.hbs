<div class="col-md-4">
      {{#if isEdit}}
      <div class="panel panel-default bootcards-richtext">
	      <div class="panel-heading">
	        <div class="form-group">
		        {{input class="form-control" placeholder="Title" value=data.title type="text"}}
	        </div>
	      </div>
	      <div class="panel-body">
          {{textarea class="form-control" value=data.description placeholder="Description"}}
	      </div>
	      <div class="panel-footer">
	        <ul class="pager">
		        <li {{action "prevPriority" data.priority}}><a>Prev</a></li>
            <li>{{data.priority}}</li>
		        <li {{action "nextPriority" data.priority}}><a>Next</a></li>
	        </ul>
          <div class="card-footer">
            <button class="btn btn-sm btn-default" {{action "saveNote" data}}><strong>Done</strong></button>
	        </div>
        </div>
      </div>
      {{else}}
      <div class="panel panel-default bootcards-richtext" {{action "edit"}}>
        <div class="panel-heading">
          <h3 class="panel-title">{{data.title}}</h3>
        </div>
        <div class="panel-body">
          <p>{{data.description}}</p>
        </div>
        <div class="panel-footer">
          <small>{{data.priority}}</small>
        </div>
      </div>
      {{/if}}
</div>